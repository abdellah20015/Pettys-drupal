<section class="brand-partners">
  <div class="container">
    <div class="brands-slider">
      <button class="slider-nav prev"><i class="bi bi-chevron-left"></i></button>
      <div class="brands-wrapper">
        {% for brand in brands %}
          <div class="brand-item">
           <a href="{{ brand.url }}">
            <img src="{{ brand.image }}" alt="{{ brand.name }}">
            </a>
          </div>
        {% endfor %}
      </div>
      <button class="slider-nav next"><i class="bi bi-chevron-right"></i></button>
    </div>

    {# Gestion conditionnelle de l'image paw-path #}
    {% if paw_path_image %}
      <div class="paw-path">
        <img src="{{ paw_path_image }}" alt="Paw Path">
      </div>
    {% else %}
      <!--
      <div class="debug-message">
        Paw path image not available
      </div>
      -->
    {% endif %}
  </div>
</section>
